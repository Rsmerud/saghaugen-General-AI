{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Status",
  "description": "Schema for agent status reporting",
  "type": "object",
  "required": ["agent", "timestamp", "status"],
  "properties": {
    "agent": {
      "type": "string",
      "description": "Agent identifier (e.g., 'react-ha', 'knx-manager')"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of status update"
    },
    "status": {
      "type": "string",
      "enum": ["operational", "degraded", "down", "maintenance"],
      "description": "Current operational status"
    },
    "current_tasks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of tasks currently being worked on"
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "description"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "warning", "info"]
          },
          "description": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Current issues or warnings"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of systems this agent depends on"
    },
    "last_deployment": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last deployment/change"
    },
    "metrics": {
      "type": "object",
      "description": "Optional metrics (uptime, requests, etc.)",
      "additionalProperties": true
    }
  }
}
